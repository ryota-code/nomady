<div class="container">
  <div class="user-wrapper">
    <h2>ユーザー</h2>
    <ul class="users">
      <% @users.each do |user| %>
        <li class="user">
          <div class="user-left">
            <% if user.image.url.nil? %>
            <%= image_tag 'noimage.png' %>
            <% else %>
            <%= image_tag user.image.url %>
            <% end %>
          </div>
          <div class="user-right">
            <h3><%= link_to user.name, user %></h3>
            <p><%= user.detail %></p>
            
            <%  if current_user && current_user.admin? %>
            <%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
    <%= paginate @users %>
  </div>
</div>
