<div class="container">
  <div class="user-wrapper">
    <h2>ユーザー</h2>
    <div class="row">
      <ul class="users">
        <% @users.each do |user| %>
          <li class="user col-md-6 col-sm-12">
            <%= link_to user do %>
              <div class="user-left">
                <% if user.image.url.nil? %>
                <%= image_tag 'noimage.png' %>
                <% else %>
                <%= image_tag user.image.profile_image.url %>
                <% end %>
              </div>
              <div class="user-right">
                <h3><%= user.name %></h3>
                <p><%= user.detail %></p>
                
                <%  if current_user && current_user.admin? %>
                <%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %>
                <% end %>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
      
    </div>
    <%= paginate @users %>
  </div>
</div>
