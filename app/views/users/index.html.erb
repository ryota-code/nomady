<div class="container">
  <h1>ユーザー</h1>
  <ul class="users">
    <% @users.each do |user| %>
      <li class="user">
        <div class="user-left">
          <% if user.image.url.nil? %>
          <%= image_tag 'noimage.png' %>
          <% else %>
          <%= image_tag user.image.url %>
          <% end %>
        </div>
        <div class="user-right">
          <%= link_to user.name, user %>
          <%  if current_user && current_user.admin? %>
          <%= link_to "削除", user, method: :delete, data: { confirm: "本当に削除しますか？" } %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @users %>
</div>
