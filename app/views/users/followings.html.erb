<div class="container">
  <div class="user-wrapper">
    <h2>フォローしているユーザー</h2>
    <ul class="users">
      <% if @users.nil? %>
      <p>まだフォローしているユーザーはいません。</p>
      <% else %>
      <% @users.each do |user| %>
        <li class="user">
          <%= link_to user do %>
            <div class="user-left">
              <% if user.image.url.nil? %>
              <%= image_tag 'noimage.png' %>
              <% else %>
              <%= image_tag user.image.profile_image.url %>
              <% end %>
            </div>
            <div class="user-right">
              <h3><%= user.name %></h3>
              <p><%= user.detail %></p>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
    <%= paginate @users %>
    <% end %>
  </div>
</div>
