<div class="edit form-wrapper">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/errors', object: f.object %>
    <dl>
        <dt>ユーザー名</dt>
        <dd><%= f.text_field :name %></dd>
    </dl>
    <dl>
        <dt>メールアドレス</dt>
        <dd> <%= f.email_field :email %></dd>
    </dl>
    <dl>
        <dt>自己紹介</dt>
        <dd><%= f.text_field :detail %></dd>
    </dl>
    <dl>
        <dt>パスワード</dt>
        <dd><%= f.password_field :password %></dd>
    </dl>
    <dl>
        <dt>パスワード（確認）</dt>
        <dd><%= f.password_field :password_confirmation %></dd>
    </dl>
    <dl>
        <dt>プロフィール画像</dt>
        <dd><%= f.file_field :image, class: "register_profile_image" %></dd>
    </dl>
    <%= f.submit "保存", class: "btn btn-save" %>
    <% end %>
</div>