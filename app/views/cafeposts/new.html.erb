<div class="form-wrapper">
  <%= form_for(@cafepost) do |f| %>
    <%= render 'shared/errors', object: f.object %>
  
      <div id="img_field" onClick="$('#file').click()" >
        <% if @cafepost.image.url.present? %>
          <%= image_tag(@cafepost.image.url) %>
        <% else %>
          <i class="fas fa-image"></i><i class="fas fa-file-upload add"></i>
        <% end %>
      </div>
      <%= f.file_field :image, id: "file" %>
      <dl>
        <dt>店名</dt>
        <dd><%= f.text_field :title %></dd>
      </dl>
      <dl>
        <dt>紹介文</dt>
        <dd><%= f.text_field :content %></dd>
      </dl>
      
      <dl>
        <dt>タグ(複数のタグを登録できます。）</dt>
        <dd><%= f.text_field :tag_list, value: @cafepost.tag_list.join(','), data: {role: "tagsinput"} %></dd>
      </dl>
      
      <dl class="checkbox">
        <label>
          <%= f.check_box :wifi, :as => :boolean, class: 'checkbox-input' %><span class="checkbox-parts">WiFi</span>
        </label>
        <label>
          <%= f.check_box :power, :as => :boolean, class: 'checkbox-input' %><span class="checkbox-parts">コンセント</span>
        </label>
      </dl>
      
      <h2>カフェの住所</h2>
      <dl>
        <dt>郵便番号</dt>
        <dd><%= f.text_field :postcode %></dd>
      </dl>
      <dl>
        <dt>住所</dt>
        <dd><%= f.text_field :address_all %></dd>
      </dl>
    <%= f.button "投稿", type: 'button', onclick: 'submit();', class: 'btn btn-post' %>
  <% end %>
</div>